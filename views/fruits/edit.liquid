{% layout 'layout.liquid' %}
{% block content %}
    <div>
        <form action="/fruits/{{fruit.id}}?_method=PUT" method="POST">
            <fieldset>
                <legend>Edit New Fruit</legend>
                <label>
                    Name: 
                    <input type="text" name="name" placeholder="enter fruit name" value={{fruit.name}}>
                </label>
                <label>
                    Color: 
                    <input type="text" name="color" placeholder="enter fruit color" value={{fruit.color}}>
                </label>
                <label>
                    Ready to Eat:
                    <input type="checkbox" name="readyToEat"
                    {% if fruit.readyToEat%}
                        checked
                    {% endif %}
                    >
                </label>
            </fieldset>
            <input type="submit" value="Edit New Fruit">
        </form>
    </div>
{% endblock %}